{
  "name": "server",
  "description": "Socket server for Pedago Game",
  "version": "0.0.1",
  "main": "build/index.js",
  "repository": "https://github.com/EightMedia/pedago",
  "author": "Eight Media",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "(lsof -ti:3001 | xargs kill) && (run-p --print-label watch run-server)",
    "run-server": "(lsof -ti:3001 | xargs kill) && (nodemon ./src/index.ts)",
    "build": "tsc",
    "watch": "tsc -w",
    "logs": "heroku logs --tail",
    "kill": "lsof -ti:3001 | xargs kill",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.24",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.4",
    "airtable": "^0.11.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "http": "^0.0.1-security",
    "nodemailer": "^6.7.3",
    "socket.io": "^4.4.1",
    "zustand": "^3.7.1"
  }
}
